rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colección de resultados de análisis
    match /analyses/{document} {
      // Permitir lectura y escritura a todos los usuarios autenticados
      // En producción, podrías agregar autenticación y restricciones más específicas
      allow read, write: if true;
      
      // Alternativa más segura (comentada):
      // allow read, write: if request.auth != null;
      // allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // También permitir acceso a la colección 'results' por compatibilidad
    match /results/{document} {
      allow read, write: if true;
    }
    
    // Regla por defecto: denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
